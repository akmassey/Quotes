<%= form_for(@quote) do |f| %>
  <% if @quote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
      <% @quote.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </div>
  <div class="field">
    <%= f.label :source_url, "Source URL (optional)" %><br />
    <%= f.text_field :source_url %>
  </div>

  <%= f.fields_for :author do |author_form| %>
    <%= author_form.label :name %><br />
    <%= author_form.text_field :name %>
  <% end %>

  <div class="field">
    <%= f.label :collection %><br />
    <%= f.collection_select :quotes, :collection_id, @collections, :id, :name, :include_blank => true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
