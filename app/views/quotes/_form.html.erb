<%= simple_form_for @quote, :html => {:class => 'well form-horizontal' } do |f| %>
  <%= f.error_messages %>
  <%= f.input :text, :label => "Text" %>
  <%= f.input :source_url, :label => "Source URL (optional)" %>

  <%= f.simple_fields_for :author do |author_form| %>
    <%= author_form.input :name %>
  <% end %>

  <%= f.association :collections %>
  <%= f.button :submit %>
<% end %>
