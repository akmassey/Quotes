<% title "Listing Quotes" %>

<table>
  <tr>
    <th>Text</th>
    <th>Author</th>
    <th>Source URL</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quotes.each do |quote| %>
  <tr>
    <td><%= quote.text %></td>
    <% if quote.author %>
      <td><%= quote.author.name %></td>
    <% else %>
      <td>This quote has no author!</td>
    <% end %>
    <td><%= quote.source_url %></td>
    <td><%= link_to 'Show', quote %></td>
    <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
    <td><%= link_to 'Destroy', quote, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Quote', new_quote_path %>
